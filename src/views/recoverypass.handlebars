<div class="container mt-5 w-50 d-column">
    <h1 class="text-center p-">Reset password...</h1>
    <form action="/api/resetPassword?token={{token}}" method="post" class="d-flex justify-content-center">
        <ul>
            <li class="mb-2">
                <input type="password" name="password" placeholder="New password" required>
            </li>
            <li class="text-center">
                <input type="submit" value="Change password">
            </li>
        </ul>
    </form>

</div>

<script src="/js/index.js"></script>